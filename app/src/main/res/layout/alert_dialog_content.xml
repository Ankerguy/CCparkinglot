<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/alert_dialog_content_textview_parkinglot_name"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:hint="parkinglot name"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/alert_dialog_content_button_go_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/alert_dialog_content_button_go_button"
        android:layout_width="70dp"
        android:layout_height="28dp"
        android:background="@drawable/go_btn"
        app:layout_constraintBottom_toBottomOf="@+id/alert_dialog_content_textview_parkinglot_name"
        app:layout_constraintLeft_toRightOf="@+id/alert_dialog_content_textview_parkinglot_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/alert_dialog_content_textview_parkinglot_name" />


</androidx.constraintlayout.widget.ConstraintLayout>